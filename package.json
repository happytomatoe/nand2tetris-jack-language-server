{
  "name": "nand2tetris-jack-lsp",
  "description": "A language server for nand2tetris jack language",
  "version": "0.0.1",
  "author": "Roman Lukash",
  "categories": [],
  "contributes": {
    "languages": [
      {
        "id": "jack",
        "extensions": [
          "jack"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/jack.svg",
          "dark": "./icons/jack.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "jack",
        "scopeName": "source.jack",
        "path": "./syntaxes/jack.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "jack",
        "path": "./snippets/jack.json"
      }
    ]
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "^20.16.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "glob": "^11.0.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "mocha": "^10.7.3",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "keywords": [
    "multi-root ready"
  ],
  "license": "MIT",
  "lint-staged": {
    "!(*.ts)": "prettier --write",
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "main": "./client/out/extension",
  "publisher": "rlukash",
  "repository": "happytomatoe/nand2tetris-jack-lsp",
  "scripts": {
    "build": "pnpm clean && tsc -b",
    "ci": "pnpm run lint && pnpm -r t&& pnpm run test ",
    "clean": "rimraf tsconfig.tsbuildinfo **/out **/tsconfig.tsbuildinfo",
    "format": "npx prettier --write .",
    "lint": "eslint ./client/src ./server/src ./jack-compiler/src ./prettier-plugin-jack/src --ext .ts,.tsx",
    "prepare": "husky",
    "remark": "remark",
    "remark:fix": "pnpm remark --output --",
    "test": "sh ./scripts/e2e.sh",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -b -w"
  }
}
