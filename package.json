{
  "name": "nand2tetris-jack-lsp",
  "description": "A language server for nand2tetris jack language",
  "version": "0.5.0",
  "author": "Roman Lukash",
  "categories": [],
  "contributes": {
    "languages": [
      {
        "id": "jack",
        "extensions": [
          "jack"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/jack.svg",
          "dark": "./icons/jack.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "jack",
        "scopeName": "source.jack",
        "path": "./syntaxes/jack.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "jack",
        "path": "./snippets/jack.json"
      }
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.16.10",
    "eslint": "^9.12.0",
    "glob": "^11.0.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.1"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "keywords": [
    "multi-root ready"
  ],
  "license": "MIT",
  "main": "./client/out/extension",
  "publisher": "roman-lukash",
  "repository": "happytomatoe/nand2tetris-jack-lsp",
  "scripts": {
    "lint": "eslint ./client/src ./server/src ./jack-compiler/src ./prettier-plugin-jack/src --fix",
    "build": "pnpm clean && tsc -b && pnpm -r run build",
    "ci": "pnpm run lint && pnpm run unit-test",
    "clean": "rimraf tsconfig.tsbuildinfo **/out **/tsconfig.tsbuildinfo",
    "format": "npx prettier --write .",
    "prepare": "husky",
    "e2e-test": "pnpm -w client run e2e-test",
    "unit-test": "pnpm -r test",
    "vscode:prepublish": "pnpm run build",
    "watch": "tsc -b -w"
  }
}
