{
  "name": "nand2tetris-jack-lsp",
  "description": "A language server for nand2tetris jack language",
  "author": "Roman Lukash",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/happytomatoe/nand2tetris-jack-lsp"
  },
  "publisher": "rlukash",
  "categories": [],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:jack"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "jack",
        "extensions": [
          "jack"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jack",
        "scopeName": "source.jack",
        "path": "./syntaxes/jack.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "jack",
        "path": "./snippets/jack.json"
      }
    ]
  },
  "scripts": {
    "clean": "rimraf tsconfig.tsbuildinfo **/out **/tsconfig.tsbuildinfo",
    "vscode:prepublish": "npm run compile",
    "build": "pnpm clean && tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src ./jack-compiler/src ./prettier-plugin-jack/src --ext .ts,.tsx",
    "test": "sh ./scripts/e2e.sh",
    "ci": "pnpm -r t",
    "format": "npx prettier --write ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "^20.16.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "glob": "^11.0.0",
    "jest": "^29.7.0",
    "mocha": "^10.7.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2"
  }
}
