{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Jack",
  "fileTypes": ["jack"],
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comment"
    },
    {
      "include": "#boolean"
    },
    {
      "include": "#params"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#grammar"
    },
    {
      "include": "#meta"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control",
          "match": "\\b(while|return|field|this|if|else)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.Jack",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.Jack",
          "match": "\\\\."
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash",
          "begin": "//",
          "end": "\\n"
        },
        {
          "begin": "\\/\\*\\*",
          "end": "\\*\\/",
          "name": "comment.block"
        }
      ]
    },
    "boolean": {
      "patterns": [
        {
          "name": "entity.name.tag",
          "match": "\\b(this|let|var|class|function|method|constructor)\\b"
        }
      ]
    },
    "params": {
      "patterns": [
        {
          "name": "markup.bold",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function",
          "match": "([a-z]|[A-Z]|[0-9])+(?=\\()"
        }
      ]
    },
    "grammar": {
      "patterns": [
        {
          "name": "entity.name.type",
          "match": "\\b[A-Z]([A-Za-z0-9_-])+\\b"
        },
        {
          "name": "variable.name",
          "match": "\\b(do|int|char|void|static|boolean)\\b"
        }
      ]
    }
  },
  "scopeName": "source.jack"
}
